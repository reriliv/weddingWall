/* 底部 */
.footer{ padding: 0 28rpx; }
.save-action{ width: 125rpx; height: 62rpx; border-radius: 10rem; background: rgb(255, 161, 162); }
.save-action button{ line-height: 62rpx; color: rgb(255, 255, 255); font-size: 32rpx; }