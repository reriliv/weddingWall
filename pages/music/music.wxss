page{ background: #fff; }

.header, .content, .footer{ border-top: 2rpx solid rgb(229, 229, 229); }
.header, .footer{ display: flex; justify-content: space-between; align-items: center; height: 98rpx; }
/* 头部 */
.header{ padding: 0 20rpx; }


/* 正文 */
.content{ overflow: hidden; }
.music-item{ display: flex; justify-content: space-between; align-items: center; padding: 0 20rpx; height: 78rpx; border-bottom: 2rpx solid rgb(229, 229, 229); }
.music-item checkbox{ width: 300px; }
.music-player{ position: relative; width: 78rpx; height: 78rpx; line-height: 78rpx; overflow: hidden; }
.music-player audio{ position: absolute; top: -27.5rpx; left: -27.5rpx; background: #fff; }
.music-player audio::before{ background: #fff; }
