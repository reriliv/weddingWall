/**index.wxss**/


/* 头部栏样式 */
.header{ position: relative; overflow: hidden; }
.banner{ position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 99; }
.qr-code{ position: absolute; top: 0; left: 0; z-index: 100; }
.prize-draw-top-panel{ position: absolute; top: 46rpx; left: 188rpx; z-index: 100; width: 375rpx; height: 281rpx; }
.prize-top-panel-background{ position: absolute; z-index: 1; width: 100%; height: 100%; }
.prize-top-panel-info{ position: relative; top: 14rpx; z-index: 2; }
.info-name{ margin-top: 13rpx; text-align: center; color: #fe4236; font-size: 18rpx; }
/* 快速模式 */
.turbo-prize-top-info{ display: flex; justify-content: space-between; margin: 20rpx 16rpx 0; }
.prize-goal, .prize-qrcode{ width: 170rpx; text-align: center; }
.prize-goal{ position: relative; margin-top: 24rpx; }
.prize-goal-swiper{ height: 104rpx; }
.prize-goal-top-arrow{ position: absolute; left: 62.5rpx; top: -25rpx; width: 0rpx; border-width: 21rpx; border-style: solid; border-color: #ff2b2d transparent transparent transparent; }
.prize-goal-bottom-arrow{ position: absolute; left: 62.5rpx; bottom: -20rpx; width: 0rpx; border-width: 21rpx; border-style: solid; border-color: transparent transparent #ff2b2d transparent; }
.prize-qrcode{ border-left: 3rpx solid #ffa9a3; }
.prize-person-head, .qr-code-image{ margin: 0 auto; width: 80rpx; height: 80rpx; overflow: hidden; border-radius: 10rem; }
.prize-person-name{ font-size: 18rpx; color: #363636; }
.prize-qrcode view{ margin-top: 8rpx; text-align: center; font-size: 14rpx; color: #363636; }
.prize-goal-item{ height: 104rpx; }
/* 弹幕模式 */
.barrage-prize-top-info{ margin: 0 auto; padding: 35rpx 0; width: 275rpx; }

/* 高级模式 */
.high-prize-top-info{  }


/* 正文样式 */
.content{ position: relative; z-index: 10000; background: #eeeeee; }
.control-bar{ display: flex; justify-content: space-around; align-content: center; background: #fff; }
.static{ border-bottom: 3rpx solid #fff; color: #6c6c6c; }
.active{ padding-bottom: 12rpx; border-bottom: 6rpx solid rgb(255, 43, 45); color: rgb(255, 43, 45); font-weight: bold; }
.control-item{ text-align: center; }
.control-item button{background: none; font-size: 33rpx; }
.control-item button::after{ border: 0; }

.control-panel{ background: #eee; }
.panel-content{ display: flex; justify-content: center; }
.explain-left, .explain-right{ display: flex; flex-direction: column; justify-content: space-around; }
.explain-icon, .explain-content{ padding: 0 28rpx 0 28rpx; }
.explain-content{ border-left: 1rpx solid rgb(220, 220, 220); }
.explain-icon-frist{ width: 56rpx; height: 70rpx; }
.explain-icon-second{ width: 61rpx; height: 60rpx; }
.explain-icon-third{ width: 65rpx; height: 57rpx; }
.explain-text{ margin-bottom: 10rpx; font-size: 27rpx; color: rgb(54, 54, 54); font-weight: bold; }
.explain-detail text{ font-size: 22rpx; color: rgb(130, 130, 130); }
.email-address, .copy-address{ display: inline-block; vertical-align: middle; }
.email-address{ padding-left: 12rpx; width: 388rpx; border-radius: 5rpx; background: rgb(255, 255, 255); font-size: 22rpx; text-indent: 12rpx; border: 2rpx solid #dfdfdf; color: rgb(130, 130, 130); }
.copy-address{ margin-left: 14rpx; padding: 0; width: 142rpx; height: 62rpx; text-align: center; line-height: 62rpx; font-size: 27rpx; color: rgb(255, 255, 255); border-radius: 30rpx; background: rgb(255, 43, 45); }
.explain-content:last-child .explain-detail{ display: flex; justify-content: space-between; }
.detail-btn{ display: flex; justify-content: space-between; align-items: center; margin: 0; width: 230rpx; height: 62rpx; font-size: 22rpx; border-radius: 30rpx; border: 2rpx solid rgb(255, 161, 162); }
.detail-btn text{ color: rgb(255, 43, 45); }
.inline-icon{ width: 32rpx; }


/* 控制中心 */
.control-panel{ width: 100%; overflow: auto; }
.panel-mode{ padding: 48rpx 20rpx; border-bottom: 10rpx solid rgb(229, 229, 229); }
.mode-screen, .guest-qr{ display: flex; justify-content: space-between; }
.mode-action{ display: flex; justify-content: center; }
.static-action{ font-size: 24rpx; color: rgb(255, 43, 45) }
.active-action{ background: rgb(255, 43, 45); color: rgb(255, 255, 255); }
.mode-action button{ border-radius: 0; border: 2rpx solid rgb(255, 43, 45); font-size: 24rpx; }
.mode-action button::after{ border: 0; }
.mode-action button:first-child{ border-right: 0; border-top-left-radius: 12rpx; border-bottom-left-radius: 12rpx; }
.mode-action button:last-child{ border-left: 0; border-top-right-radius: 12rpx; border-bottom-right-radius: 12rpx; }
.mode-name, .guest-name, .control-action-item text{ font-size: 32rpx; color: rgb(54, 54, 54); }
.guest-qr{ margin-top: 48rpx; }

.panel-action{ padding: 0 48rpx; }
.control-action{ display: flex; justify-content: space-between; margin-top: 48rpx; }
.control-action button{ margin: 0; padding: 0; background: none; }
.control-action button::after{ border: 0; }
.control-action-image{ margin: 0 auto; width: 100rpx; height: 100rpx; }
.control-action-image image{ width: 100%; height: 100%; }


/* 宾客互动 */
.chat-panel{ margin: 0 auto; width: 90%; height: 100%; }
.join-info{ margin-top: 20rpx; text-align: center; }
.info-content{ display: inline-block; padding: 10rpx 18rpx; border-radius: 6rpx; background: rgb(210, 210, 210); font-size: 20rpx; color: rgb(108, 108, 108); }
.join-username{ margin-right: 20rpx; }

.chat-info{ position: relative; overflow: auto; }
.chat-person{ display: flex; justify-content: space-between; align-items: center; margin-top: 30rpx; }
.chat-detail{ position: relative; }
.chat-head{ width: 80rpx; border-radius: 10rem; overflow: hidden; }
.chat-name{ font-size: 22rpx; color: rgb(108, 108, 108); }
.chat-arrow-left{ position: absolute; left: -18rpx; top: 35rpx; border-width: 10rpx; border-style: solid; border-color: transparent rgb(255, 255, 255) transparent transparent; }
.chat-arrow-right{ position: absolute; left: -18rpx; top: 35rpx; border-width: 10rpx; border-style: solid; border-color: transparent rgb(255, 255, 255) transparent transparent; }
.chat-msg{ padding: 10rpx; background: rgb(255, 255, 255); border-radius: 5rpx; font-size: 33rpx; color: rgb(54, 54, 54); }


.prize-draw-panel{ position: fixed; top: 0; left: 0; z-index: 99999; width: 100%; background: #f5d7d7; }
.prize-draw-nav{ display: flex; justify-content: center; margin: 24rpx auto 0; width: 629rpx; }
.prize-draw-item{ margin: 0; padding: 0; width: 207rpx; height: 62rpx; line-height: 58rpx; border-right: 0; background: #fff; font-size: 28rpx; color: #ff2b2d; }
.prize-draw-nav button { border: 2rpx solid #ff2b2d; }
.prize-draw-nav button:nth-child(1){ border-right: 0; border-top-left-radius: 12rpx; border-bottom-left-radius: 12rpx; }
.prize-draw-nav button:nth-child(3){ border-left: 0; border-top-right-radius: 12rpx; border-bottom-right-radius: 12rpx; }
.prize-draw-item-active{ margin: 0; padding: 0; width: 207rpx; height: 62rpx; line-height: 58rpx; background: #ff2b2d; border-right: 2rpx solid #ff2b2d; font-size: 28rpx; color: #fff; }
.prize-draw-content{ position: relative; margin: 12rpx auto 0; width: 629rpx; height: 565rpx; background: #fff; border-radius: 12rpx; }
.turbo-mode-prize{ position: relative; height: 100%; }
.turbo-mode-explain{ padding: 30rpx 0 0; text-align: center; line-height: 2; font-size: 24rpx; }
.turbo-click-animate{ position: relative; margin: 55rpx auto 0; width: 76rpx; height: 124rpx; animation: pressToPrize 0.75s infinite; animation-timing-function: linear; }
@keyframes pressToPrize{
  from{ margin-top: 55rpx; }
  to{ margin-top: 155rpx; }
}
.turbo-mode-prize .start-award-action{ position: absolute; left: 203rpx; bottom: -88rpx; }

.barrage-prize-panel{ margin: 0 auto 15rpx; padding-top: 19rpx; width: 574rpx; height: 330rpx; }
.barrage-prize-panel .award-explain{ height: 126rpx; text-align: left; line-height: 126rpx; }
.barrage-prize-explain{ margin: 0 auto; padding: 0rpx 0 28rpx; width: 558rpx; text-align: center; }
.barrage-prize-explain text{ font-size: 18rpx; color: #363636; word-wrap: break-word; }
.barrage-prize-explain text text{ color: #13b5f9; }
.barrage-command{ display: flex; justify-content: space-between; align-items: center; margin: 0 auto; /* padding: 11rpx 0; */ height: 64rpx; }
.command-name{ font-size: 30.5rpx; color: #363636; }
.command-barrage-input{ padding: 0; width: 352rpx; border-bottom: 2rpx solid #dfdfdf; }
.command-barrage-input input{ font-size: 30.5rpx; }
.command-release-action{ margin: 0; padding: 0; width: 84rpx; height: 42rpx; line-height: 42rpx; border-radius: 10rem; background: #ff2b2d; font-size: 26rpx; color: #fff; overflow: hidden; }
.screen-tips{ margin: 0; padding: 0; width: 100rpx; }
.screen-tips-icon{ margin: 0 auto; width: 27rpx; height: 36rpx; overflow: hidden; }
.screen-tips-name-open, .prize-panel-name-open{ font-size: 24rpx; color: #ff2b2d; }
.screen-tips-name-close, .prize-panel-name-close{ font-size: 24rpx; color: #363636; }
.prize-panel{ margin: 0; padding: 0; width: 100rpx; }
.prize-panel-icon{ margin: 0 auto; width: 32rpx; height: 35rpx; overflow: hidden; }
.barrage-position{ left: 203rpx; top: 50rpx; }
.barrage-award-list{ max-height: 126rpx; overflow: auto; }
.barrage-award-list radio .wx-radio-input{ width: 26rpx; height: 26rpx; }
.barrage-award-list radio .wx-radio-input.wx-radio-input-checked::before{ width: 26rpx; height: 26rpx; line-height: 26rpx; font-size: 23rpx; }

.start-award-action{ position: absolute; margin: 0; padding: 0; width: 222rpx; height: 222rpx; border-radius: 10rem; overflow: hidden; }
.start-award-action image{ position: absolute; left: 0; bottom: 0; z-index: 9999; width: 100%; height: 100%; text-align: center; }
.start-award-action text{ position: relative; z-index: 10000; width: 100%; height: 100%; line-height: 222rpx; font-size: 68rpx; font-weight: bold; color: #fff; }

.award-list, .award-explain{ margin-bottom: 15rpx; height: 330rpx; }
.award-explain{ text-align: center; line-height: 330rpx; font-size: 32rpx; color: #ff2b2d; }
.award-list radio{ display: block; margin: 0 auto; width: 574rpx; }
.award-item, .award-item-disable{ display: flex; justify-content: space-between; align-items: center; width: 520rpx; height: 63rpx; }
.award-info image{ display: inline-block; vertical-align: middle; margin-right: 8rpx; width: 32rpx; height: 35rpx; }
.award-info text{ display: inline-block; vertical-align: middle; font-size: 26rpx; }
.award-msg{ font-size: 26rpx; color: #2de131; }
.award-item-disable .award-msg{ font-size: 26rpx; color: #9c9c9c; }
.prize-draw-action{ position: relative; display: flex; justify-content: space-between; align-items: center; margin-top: 33rpx; padding: 50rpx 27.5rpx 0; height: 117rpx; }
.set-award-action, .check-award-action{ margin: 0; padding: 22.5rpx 0; text-align: center; }
.set-award-action view:nth-child(even), .check-award-action view:nth-child(even){ height: 22rpx; line-height: 22rpx; font-size: 24rpx; color: #363636; }
.set-award-action view:nth-child(odd){ margin: 0 auto 7rpx; width: 41rpx; height: 40rpx; }
.check-award-action view:nth-child(odd){ margin: 0 auto 7rpx; width: 30rpx; height: 35rpx; }
.check-award-action view:nth-child(odd) image{ width: 100%; }
.high-mode-prize .start-award-action{ top: 50rpx; left: 203rpx; }
.high-mode-prize{ padding-top: 19rpx; }
.to-set-award{ position: absolute; left: 48rpx; top: -75rpx; width: 46rpx; height: 74rpx; animation: setAward 0.75s infinite; animation-timing-function: linear; }
@keyframes setAward{
  from{ top: -75rpx; }
  to{ top: -10rpx; }
}

.back-btn{ position: absolute; left: 50rpx; bottom: 69rpx; }
.cancel-btn{ position: absolute; right: 50rpx; bottom: 69rpx; }
.back-btn button, .cancel-btn button{ display: flex; justify-content: space-between; align-items: center; padding: 14rpx; }
.back-btn button text, .cancel-btn button text{ height: 22rpx; line-height: 22rpx; color: #363636; font-size: 24rpx; }
.back-btn image{ margin-right: 10rpx; width: 23rpx; height: 19rpx; }
.cancel-btn image{ margin-right: 10rpx; width: 19rpx; height: 19rpx; }


/* 底部栏样式 */
.footer{  }
.message-shade{ position: fixed; top: 0rpx; left: 0rpx; z-index: 99999; width: 100%; height: 100%; background: #000; opacity: 0.65; }
.message-panel{ position: fixed; top: 300rpx; left: 75rpx; z-index: 100000; width: 600rpx; min-height: 300rpx; background: #fff; border-radius: 10rpx; overflow: hidden; }
.message-title{ padding-top: 20rpx; text-align: center; line-height: 80rpx; font-size: 28rpx; color: #000000; }
.message-content{ padding-bottom: 20rpx; text-align: center; line-height: 80rpx; font-size: 24rpx; color: #999999; }
.message-action{ line-height: 98rpx; border-top: 2rpx solid #e5e5e6; }