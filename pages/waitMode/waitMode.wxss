page{ background: #fff; }
/* 头部样式*/
.header{ padding: 0 20rpx; height: 100rpx; border-top: 2rpx solid #e5e5e5; border-bottom: 24rpx solid #eee; }
.mode-bar{ display: flex; justify-content: space-between; align-items: center; width: 100%; height: 100%; }
.mode-title, .mode-list radio{ font-size: 36rpx; color: rgb(54, 54, 54); }
.mode-title{ font-weight: bold; }
.mode-list radio-group{ display: flex; justify-content: space-around; width: 250px; }


/* 正文样式 */
.content{ background: #d2d2d2; }
.content-title, .set-title{ padding: 0 20rpx; height: 60rpx; line-height: 60rpx; background: #fff; font-size: 26rpx; color: rgb(54, 54, 54); }
.set-info{ margin-bottom: 26rpx; }
 /*.content-title{ margin-bottom: 26rpx; }*/
/*.setting-list{ padding-bottom: 26rpx; } */
.setting-item{ display: flex; justify-content: space-between; margin: 12rpx auto 0; padding: 0 12rpx; width: 686rpx; height: 72rpx; line-height: 72rpx; background: #fff; border-radius: 8rpx; font-size: 28rpx; }
.setting-item input { height: 100%; text-align: right; }

.set-background{ padding-bottom: 22rpx; overflow: hidden; }
.main-title-list{ display: flex; justify-content: space-between; flex-wrap: wrap; padding: 10rpx 20rpx; }
.main-title-item{ position: relative; margin-top: 12rpx; width: 168rpx; height: 168rpx; overflow: hidden; }
.main-title-item radio{ position: absolute; right: 0; }
.main-title-item radio .wx-radio-input{ width: 34rpx; height: 34rpx; border: 2rpx solid #fff; border-radius: 50%; background: #000; opacity: 0.62; }
.main-title-item radio .wx-radio-input.wx-radio-input-checked{ width: 34rpx; height: 34rpx; border-radius: 50%; }
.main-title-item radio .wx-radio-input.wx-radio-input-checked::before{ text-align: center; line-height: 32rpx; font-size: 34rpx; color: #fff; font-weight: bold; }

.save-action{ padding: 48rpx 0; background: #fff; }
.save-action button{ width: 710rpx; height: 62rpx; line-height: 62rpx; background: rgb(255, 43, 45); color: #fff; border-radius: 10rem; font-size: 32rpx; }